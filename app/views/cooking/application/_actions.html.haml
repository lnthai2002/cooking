= tabs_tag(builder: Cooking::MenuBuilder, namespace: :recipe,
           open_tabs:{class:'right'},
           active: {class:'active'}) do |tab|
  - tab.list 'List', recipes_path
  - tab.add 'Add', new_recipe_path, remote:true, 'data-reveal-id'=>'dialog'
  - if (@recipe && !@recipe.new_record?)
    - tab.edit 'Edit', edit_recipe_path(@recipe)
    - tab.show 'Detail', recipe_path(@recipe)
    - tab.raw link_to('Remove', @recipe, data: {confirm: 'Are you sure?'}, method: :delete)
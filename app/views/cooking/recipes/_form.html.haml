= form_for(@recipe, html:{multipart:true}) do |f|
  .row
    .large-12.columns
      =f.error_messages
  .row
    .large-12.columns
      = f.text_field :name, 'placeholder'=>'Name of recipe'
  .row
    .large-12.columns
      = f.text_area :description, 'placeholder'=>'description'
  .row
    .large-12.columns
      %label
        Cover image
        = f.file_field :image
        =f.text_field :remote_image_url, :placeholder => "or image URL"
  .row
    .large-6.columns
      %a.close-button-class.close-reveal-modal Cancel
    .large-6.columns
      = f.submit 'Done', class:'button expand'

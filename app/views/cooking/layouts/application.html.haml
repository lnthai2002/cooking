!!! 5

%html
  %head
    %meta{name:'viewport', content:'width=device-width, initial-scale=1.0'}
    %title= content_for?(:title) ? yield(:title) : 'Cooking'
    %meta{name:'description', content:"#{content_for?(:description) ? yield(:description) : 'Cooking'}"}
    = stylesheet_link_tag 'cooking/application'
    -# Foundation 5 won't work with Rails Turbolinks
    -# Modernizr is required for Zurb Foundation
    = javascript_include_tag 'vendor/modernizr'
    = csrf_meta_tags
  %body
    = render partial:'navigation'
    = render 'messages'
    #dialog.reveal-modal{'data-reveal'=>true}
    = content_for?(:content) ? yield(:content) : yield
    -# Foundation 5 won't work when application.js is included in HEAD
    = javascript_include_tag 'cooking/application'